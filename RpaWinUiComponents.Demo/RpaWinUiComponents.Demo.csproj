<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.26100.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <RootNamespace>RpaWinUiComponents.Demo</RootNamespace>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Platforms>x86;x64;ARM64</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
    <PublishProfile>win10-$(Platform).pubxml</PublishProfile>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>

    <!-- KRITICKÉ pre .NET 8 -->
    <UseRidGraph>true</UseRidGraph>
    <SelfContained>false</SelfContained>
    <RuntimeFrameworkVersion>8.0.0</RuntimeFrameworkVersion>

    <!-- XAML konfigurácia -->
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <DisableXamlMetadataProvider>false</DisableXamlMetadataProvider>
    <XamlCodeGenerationControlFlags>None</XamlCodeGenerationControlFlags>

    <!-- Assembly info -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <AssemblyTitle>RpaWinUiComponents Demo</AssemblyTitle>
    <AssemblyDescription>Demo aplikácia pre RpaWinUiComponents Advanced DataGrid</AssemblyDescription>
    <AssemblyCompany>RPA Solutions</AssemblyCompany>
    <AssemblyProduct>RpaWinUiComponents</AssemblyProduct>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
  </PropertyGroup>

  <!-- Content súbory -->
  <ItemGroup>
    <Content Include="Assets\**\*" />
  </ItemGroup>

  <!-- NuGet packages - AKTUALIZOVANÉ VERZIE -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.6" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4188" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="System.Text.Json" Version="9.0.6" />
  </ItemGroup>

  <!-- Project references -->
  <ItemGroup>
    <ProjectReference Include="..\RpaWinUiComponents\RpaWinUiComponents.csproj" />
  </ItemGroup>

  <!-- EXPLICITNÉ XAML súbory V SPRÁVNOM PORADÍ -->
  <ItemGroup>
    <ApplicationDefinition Include="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </ApplicationDefinition>
    <Page Include="MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <!-- Code Behind Files s proper závislostami -->
  <ItemGroup>
    <Compile Update="App.xaml.cs">
      <DependentUpon>App.xaml</DependentUpon>
    </Compile>
    <Compile Update="MainWindow.xaml.cs">
      <DependentUpon>MainWindow.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- Manifest -->
  <ItemGroup>
    <None Include="Package.appxmanifest" />
  </ItemGroup>

  <!-- Build konfigurácie s error handling -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <EnableMsixTooling>true</EnableMsixTooling>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>3</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
    <EnableMsixTooling>true</EnableMsixTooling>
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <EnableMsixTooling>true</EnableMsixTooling>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>3</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <EnableMsixTooling>true</EnableMsixTooling>
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|ARM64'">
    <EnableMsixTooling>true</EnableMsixTooling>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>3</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|ARM64'">
    <EnableMsixTooling>true</EnableMsixTooling>
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <!-- KRITICKÝ: Post-build cleanup target -->
  <Target Name="CleanupTemporaryFiles" AfterTargets="Build">
    <ItemGroup>
      <TempFiles Include="$(IntermediateOutputPath)\**\*.tmp" />
      <TempFiles Include="$(IntermediateOutputPath)\**\*.cache" />
    </ItemGroup>
    <Delete Files="@(TempFiles)" ContinueOnError="true" />
  </Target>

  <!-- NOVÝ: Force XAML regeneration -->
  <Target Name="ForceXamlGeneration" BeforeTargets="Build">
    <Message Text="Forcing XAML generation for Demo project..." Importance="high" />
  </Target>

</Project>