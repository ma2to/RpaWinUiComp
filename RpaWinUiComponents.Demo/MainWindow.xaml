<Window
    x:Class="RpaWinUiComponents.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RpaWinUiComponents Demo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="16,8">
            <TextBlock Text="RpaWinUiComponents Demo" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Controls Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Padding="16,12" Background="#ECF0F1" Spacing="8">
            <Button x:Name="LoadSampleDataButton" 
                    Content="Načítať dáta" 
                    Click="OnLoadSampleDataClick"
                    Background="#3498DB" 
                    Foreground="White"/>

            <Button x:Name="ValidateAllButton" 
                    Content="Validovať" 
                    Click="OnValidateAllClick"
                    Background="#27AE60" 
                    Foreground="White"/>

            <Button x:Name="ClearDataButton" 
                    Content="Vymazať" 
                    Click="OnClearDataClick"
                    Background="#E74C3C" 
                    Foreground="White"/>

            <Button x:Name="ExportDataButton" 
                    Content="Export" 
                    Click="OnExportDataClick"
                    Background="#F39C12" 
                    Foreground="White"/>

            <Button x:Name="RemoveEmptyRowsButton" 
                    Content="Odstrániť prázdne" 
                    Click="OnRemoveEmptyRowsClick"
                    Background="#9B59B6" 
                    Foreground="White"/>

            <ComboBox x:Name="ThrottlingComboBox" 
                      SelectedIndex="1"
                      SelectionChanged="OnThrottlingChanged">
                <ComboBoxItem Content="Disabled" Tag="Disabled"/>
                <ComboBoxItem Content="Fast" Tag="Fast"/>
                <ComboBoxItem Content="Normal" Tag="Default"/>
                <ComboBoxItem Content="Slow" Tag="Slow"/>
            </ComboBox>

            <CheckBox x:Name="DebugLoggingCheckBox" 
                      Content="Debug" 
                      IsChecked="True"
                      Checked="OnDebugLoggingChanged"
                      Unchecked="OnDebugLoggingChanged"/>
        </StackPanel>

        <!-- Main Content -->
        <Border Grid.Row="2" Background="White" Margin="8">
            <Grid>
                <TextBlock Text="DataGrid sa načíta po inicializácii..." 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                <Border x:Name="DataGridPlaceholder" Background="Transparent"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" Padding="16,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Pripravené"
                           Foreground="White" 
                           Margin="0,0,16,0"/>

                <TextBlock x:Name="RowCountTextBlock" 
                           Text="Riadky: 0" 
                           Foreground="#95A5A6" 
                           Margin="0,0,16,0"/>

                <TextBlock x:Name="ValidationStatusTextBlock" 
                           Text="Validné: ✅" 
                           Foreground="#2ECC71"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>